---
import '../styles/global.css';
import '@fontsource/quicksand/400.css';
import '@fontsource/quicksand/500.css';
import '@fontsource/quicksand/600.css';
import '@fontsource/quicksand/700.css';


interface Props {
	title: string;
	description?: string;
	image?: string;
	type?: 'website' | 'article';
	canonicalURL?: string;
}

const { 
	title, 
	description = "Explore the most immersive way to learn English. Bubble English uses visual memory maps to connect words and concepts naturally.",
	image = "/og-image.png", // Ensure you have a default OG image in public/
	type = "website",
	canonicalURL = Astro.url.href
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<link rel="canonical" href={canonicalURL} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={type} />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, Astro.site)} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(image, Astro.site)} />

		<meta property="twitter:image" content={new URL(image, Astro.site)} />

		<!-- Fonts -->
		<link rel="stylesheet" href="/styles/global.css" />
	</head>
	<body>

		<slot />
	</body>
</html>
